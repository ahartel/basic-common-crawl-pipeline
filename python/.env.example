# Common Crawl Pipeline - Environment Variables
# Copy this file to .env and adjust values as needed

# RabbitMQ Configuration
RABBITMQ_CONNECTION_STRING=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE_NAME=commoncrawl_batches

# Prometheus Metrics Ports
BATCHER_METRICS_PORT=9000
WORKER_METRICS_PORT=9001
PROMETHEUS_PORT=9090

# Common Crawl Configuration
CC_BASE_URL=https://data.commoncrawl.org
CC_CRAWL_PATH=cc-index/collections/CC-MAIN-2024-30

# Processing Configuration
BATCH_SIZE=50
WORKER_PREFETCH_COUNT=1

# Optional: Logging Configuration
LOG_LEVEL=INFO
